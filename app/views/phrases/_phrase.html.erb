<div class="col">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= translation.content %></h5>

      <p class="card-text">
          <% if translation.ratings.empty? %>
            <%= I18n.t("phrase_card.not_yet") %>
          <% else %>
            <%= I18n.t("phrase_card.avg_rating") %>: <%= translation.ratings.average(:rating_val).truncate(2) %>
          <% end %>
        </p>

      <p class="card-text"><%= translation.ratings.size %> <%= I18n.t("phrase_card.tot_rate") %></p>
      
      <%= render "ratings/not_rated", translation: translation %>
      
      <br>

      <div class="card-footer text-muted">
        <%= I18n.t("phrase_card.submitted_by") %> <%= link_to(translation.submitter.email, user_path(translation.submitter.id)) %>
      </div>
    </div>
  </div>
</div>
