<h1><%= I18n.t("language_search.search_database") %></h1>

<h2><%= I18n.t("language_search.translate") %></h2>

<%= form_tag phrase_search_path, method: :get do %>
  <div>
    <%= label_tag :origin_word_box, "" %>
    <%= text_field_tag :origin_word, nil, placeholder: I18n.t("language_search.start_word"), required: true %>
  </div>

  <h3><%= I18n.t("language_search.from") %></h3>

  <div>
    <%= label_tag :starting_language, "" %>
    <%= select_tag :starting_language, options_from_collection_for_select(@languages, "id", "name"), prompt: I18n.t("language_search.start_lang"), required: true %>
  </div>

  <h3><%= I18n.t("language_search.to") %></h3>

  <div>
    <%= label_tag :target_language, "" %>
    <%= select_tag :target_language, options_from_collection_for_select(@languages, "id", "name"), prompt: I18n.t("language_search.target_lang"), required: true %>
  </div>

  <%= submit_tag I18n.t("language_search.search"), class: "btn btn-success" %>
<% end %>
