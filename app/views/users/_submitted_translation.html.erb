<% if translation.origin_word != nil %>
  <div class="col">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= link_to translation.origin_word.content, phrase_path(translation.origin_word) %>&nbsp;-> <%= translation.content %></h5>

        <p class="card-text"><%= translation.origin_word.target_language.name %> -> <%= translation.target_language.name %></p>

        <p class="card-text">
            <% if translation.ratings.empty? %>
              Translation not yet rated
            <% else %>
              Average rating: <%= translation.ratings.average(:rating_val).truncate(2) %>
            <% end %>
          </p>

        <p class="card-text"><%= translation.ratings.size %> total ratings</p>
        
        <%= render "ratings/not_rated", translation: translation %>
      </div>
    </div>
  </div>
<% end %>
